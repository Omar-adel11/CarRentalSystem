<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] ?? "TrustRide | Car Rentals"</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        body {
            background-color: #000;
            color: #fff;
            font-family: 'Segoe UI', Tahoma, sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* UPDATED: Removed flex centering to allow pages to scroll naturally */
        main {
            flex: 1; /* This remains to push the footer down */
        }

        .home-hero-container {
            background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('/PhotosForTheView/HomepageCar.jpg') center/cover no-repeat;
            color: #fff;
            min-height: 80vh;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            font-family: 'Segoe UI', Tahoma, sans-serif;
        }

            .home-hero-container h1 {
                font-size: 2.5rem;
                font-weight: bold;
            }

            .home-hero-container span {
                color: #00ff48;
            }

            .home-hero-container p {
                max-width: 600px;
                margin-top: 1rem;
                font-size: 1.1rem;
            }

        @@media (max-width: 768px) {
            .home-hero-container h1

        {
            font-size: 2rem;
        }

        .home-hero-container p {
            font-size: 1rem;
        }

        }
        /* Centering container specifically for the Home page hero */
        .home-hero-container {
            min-height: 80vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Hero Section */
        .hero {
            text-align: center;
            padding: 0 1rem;
        }

            .hero h1 {
                font-weight: bold;
                white-space: nowrap;
                font-size: clamp(1.8rem, 4vw, 3.2rem);
            }

                .hero h1 span {
                    color: #00ff48;
                }

            .hero p {
                font-size: 1.1rem;
                color: #d3d3d3;
                max-width: 750px;
                margin-top: 1rem;
                margin-left: auto;
                margin-right: auto;
            }

        /* Car Card Styling */
        .car-section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .car-card {
            background-color: #1a1a1a;
            border-radius: 15px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            color: #fff;
            border: 1px solid #333;
        }

        .car-card-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 0.5rem;
        }

            .car-card-header h5 {
                font-weight: 600;
                margin: 0;
            }

            .car-card-header .car-type {
                color: #00ff48;
                font-size: 0.9rem;
            }

        .car-card-img {
            width: 100%;
            height: 150px;
            object-fit: contain;
            margin: 1rem 0;
        }

        .car-card-footer {
            border-top: 1px solid #333;
            padding-top: 1rem;
            margin-top: 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .car-card-actions a {
            margin-left: 0.5rem;
        }

        /* General Form & Table Styling */
        h1 {
            font-weight: 600;
        }

        .form-control, .form-check-input {
            background-color: #2a2a2a;
            color: #fff;
            border: 1px solid #555;
        }

            .form-control:focus {
                background-color: #2a2a2a;
                color: #fff;
                border-color: #00ff48;
                box-shadow: 0 0 0 0.25rem rgba(0, 255, 72, 0.25);
            }

            .form-check-input:checked {
                background-color: #00ff48;
                border-color: #00ff48;
            }

        /* Button Overrides */
        .btn-primary {
            background-color: #00b333;
            border-color: #00b333;
        }

            .btn-primary:hover {
                background-color: #00ff48;
                border-color: #00ff48;
            }

        .btn-success {
            background-color: #007bff; /* Details button */
        }

        /* Themed Table */
        .table th, .table td {
            color: #fff; /* Force all table cells to have white text */
        }

        .table > :not(caption) > * > * {
            background-color: transparent;
            border-bottom-width: 1px;
            border-color: #333;
        }

        /* --- ABOUT PAGE STYLES --- */
        .about-hero {
            height: 80vh; /* Increased height for better effect */
            background-size: cover;
            background-position: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

            .about-hero h1 {
                font-size: clamp(3rem, 6vw, 4.5rem);
                font-weight: 700;
            }

            .about-hero p {
                font-size: 1.2rem;
                color: #e0e0e0;
            }

            .about-hero span, .section-title span {
                color: #00ff48;
            }

        .about-section {
            padding: 6rem 0;
            position: relative;
        }

        .about-section-image {
            border-radius: 15px;
        }

        /* Removed background-specific styles from here */
        .section-with-bg {
            background-size: cover;
            background-position: center;
        }

            .section-with-bg::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-color: rgba(0,0,0,0.85);
                z-index: 1;
            }

            .section-with-bg .container {
                position: relative;
                z-index: 2;
            }

        .section-title {
            font-size: 2.8rem;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        .logo-scroller {
            overflow: hidden;
            white-space: nowrap;
            position: relative;
            padding: 2rem 0;
        }

            .logo-scroller::before,
            .logo-scroller::after {
                content: '';
                position: absolute;
                top: 0;
                width: 100px;
                height: 100%;
                z-index: 2;
            }

            .logo-scroller::before {
                left: 0;
                background: linear-gradient(to left, rgba(0,0,0,0), #000);
            }

            .logo-scroller::after {
                right: 0;
                background: linear-gradient(to right, rgba(0,0,0,0), #000);
            }

        .logo-scroller-inner {
            display: inline-block;
            white-space: nowrap;
            animation: scroll-logos 40s linear infinite;
        }

            .logo-scroller-inner img {
                height: 35px;
                filter: grayscale(1) brightness(10);
                margin: 0 2rem;
                opacity: 0.8;
            }

        @@keyframes scroll-logos {
            from {
                transform: translateX(0);
            }

            to {
                transform: translateX(-50%);
            }
        }

        .stats-section {
            position: relative;
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            padding: 5rem 0;
        }

            .stats-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-color: rgba(0,0,0,0.8);
            }

            .stats-section .container {
                position: relative;
                z-index: 2;
            }

        .stat-card {
            background-color: rgba(30,30,30,0.7);
            border-radius: 15px;
            padding: 2rem;
            text-align: center;
            border: 2px solid #444; /* Standard border */
            height: 100%;
            backdrop-filter: blur(5px);
            transition: all 0.3s ease-in-out; /* Smooth transition for hover */
        }
            /* UPDATED: Hover effect for ALL stat cards */
            .stat-card:hover {
                border-color: #00ff48;
                transform: translateY(-5px); /* Add a subtle lift effect */
                box-shadow: 0 0 20px rgba(0,255,72,0.3);
            }

            .stat-card .icon {
                font-size: 3rem;
                margin-bottom: 1rem;
                color: #fff;
            }

            .stat-card h3 {
                font-size: 2.2rem;
                font-weight: 700;
            }

            .stat-card p {
                color: #ccc;
                font-size: 1.1rem;
            }
        /* --- END ABOUT PAGE STYLES --- */

        /* Navbar */
        .navbar {
            background-color: transparent;
            padding: 1rem 2rem;
            border-bottom: 2px solid #00ff48;
        }

        .navbar-brand img {
            height: 40px;
        }

        .nav-link {
            color: white !important;
            margin: 0 0.5rem;
        }

            .nav-link.active, .nav-link:hover {
                color: #00ff48 !important;
            }

        /* Updated Search Box */
        .search-form {
            display: flex;
            align-items: center;
        }

        .search-input {
            background: transparent;
            border: 1px solid white;
            border-radius: 20px 0 0 20px;
            color: white;
            padding: 0.3rem 1rem;
            width: 150px;
            border-right: none;
            outline: none;
        }

        .search-button {
            background-color: #00b333;
            border: 1px solid #00b333;
            color: white;
            border-radius: 0 20px 20px 0;
            padding: 0.3rem 0.8rem;
            cursor: pointer;
            transition: background-color 0.2s;
        }

            .search-button:hover {
                background-color: #00ff48;
                border-color: #00ff48;
            }

        /* Footer */
        footer {
            border-top: 1px solid #00ff48;
            padding: 2rem 0;
        }

        .footer-logo img {
            height: 40px;
        }

        /* Improved Footer Text Styling */
        footer h5 {
            color: #00ff48;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        footer .list-unstyled li {
            margin-bottom: 0.5rem;
        }

        footer a {
            color: #d3d3d3;
            text-decoration: none;
            transition: color 0.2s ease-in-out;
        }

            footer a:hover {
                color: #00ff48;
            }

        footer .text-muted {
            margin-top: 2rem !important;
        }


        @@media (max-width: 768px) {
            .car-card {
                margin-bottom: 1rem;
            }
        }
    </style>
</head>
<body>
    <!-- 🌐 Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand text-white" asp-controller="Home" asp-action="Index">
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/0/0b/Car_icon.svg/1024px-Car_icon.svg.png" alt=""> TrustRide
            </a>
            <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav align-items-center">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About">About</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Car" asp-action="Index">Cars</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Contact" asp-action="Index">Contact</a></li>
                </ul>
                <form asp-controller="Car" asp-action="Index" method="get" class="search-form ms-3">
                    <input name="SearchInput" class="search-input" id="SearchInput" type="text" placeholder="Search by Model...">
                    <button type="submit" class="search-button">
                        <i class="fa fa-search"></i>
                    </button>
                </form>
            </div>
        </div>
    </nav>

    <!-- 🧱 Page Body -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- 🦶 Footer -->
    <footer>
        <div class="container">
            <div class="row text-center text-md-start">
                <div class="col-md-3 mb-3 footer-logo">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/0/0b/Car_icon.svg/1024px-Car_icon.svg.png" alt=""> TrustRide
                </div>
                <div class="col-md-3 mb-3">
                    <h5>Home</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Profile" asp-action="Index">Profile</a></li>
                        <li><a asp-controller="Home" asp-action="About">About</a></li>
                        <li><a asp-controller="Car" asp-action="Index">Cars</a></li>
                        <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-3">
                    <h5>Socials</h5>
                    <ul class="list-unstyled">
                        <li><a href="#"><i class="fab fa-facebook"></i> Facebook</a></li>
                        <li><a href="#"><i class="fab fa-instagram"></i> Instagram</a></li>
                        <li><a href="#"><i class="fab fa-linkedin"></i> LinkedIn</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-3">
                    <h5>FAQ</h5>
                    <ul class="list-unstyled">
                        <li><a href="#">Account</a></li>
                        <li><a href="#">Payments</a></li>
                        <li><a href="#">Booking</a></li>
                        <li><a href="#">Support</a></li>
                    </ul>
                </div>
            </div>
            <div class="text-center text-muted mt-3">   
                Website Designed by <strong>Eng. Kenzy Eslam</strong>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>


