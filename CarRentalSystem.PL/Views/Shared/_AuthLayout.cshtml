

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TrustRide</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Basic dark theme styles */
        body {
            background-color: #121212; /* Dark background */
            color: #e0e0e0; /* Light text */
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
        }

        .auth-container {
            background-color: #1f1f1f; /* Slightly lighter dark for the card */
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.4);
            width: 100%;
            max-width: 600px; /* Adjust as needed */
        }

        .auth-header {
            font-size: 2.5em;
            font-weight: bold;
            margin-bottom: 30px;
        }

            .auth-header .P-prefix {
                color: #4CAF50; /* Green P */
            }

        .form-group label {
            color: #b0b0b0;
            margin-bottom: 5px;
            display: block;
            font-size: 0.9em;
        }

        .form-control {
            background-color: #2b2b2b;
            border: 1px solid #444;
            color: #e0e0e0;
            padding: 10px;
            border-radius: 5px;
            transition: border-color 0.3s ease;
        }

            .form-control:focus {
                background-color: #2b2b2b;
                border-color: #4CAF50;
                box-shadow: 0 0 0 0.2rem rgba(76, 175, 80, 0.25);
                color: #e0e0e0;
            }

        .form-check-label {
            color: #e0e0e0;
        }

        .btn-primary {
            background-color: #4CAF50;
            border-color: #4CAF50;
            padding: 10px 20px;
            border-radius: 5px;
            font-weight: bold;
            margin-top: 20px;
        }

            .btn-primary:hover {
                background-color: #45a049;
                border-color: #45a049;
            }

        /* Customize radio buttons */
        .form-check-input[type="radio"] {
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
            display: inline-block;
            position: relative;
            width: 18px;
            height: 18px;
            border-radius: 50%;
            border: 2px solid #555; /* Border for unchecked */
            background-color: #333; /* Background for unchecked */
            cursor: pointer;
            outline: none;
            margin-right: 5px;
            vertical-align: middle;
        }

            .form-check-input[type="radio"]:checked {
                border: 2px solid #4CAF50; /* Green border for checked */
                background-color: #333; /* Still dark background for checked */
            }

                .form-check-input[type="radio"]:checked::before {
                    content: '';
                    display: block;
                    width: 10px;
                    height: 10px;
                    border-radius: 50%;
                    background-color: #4CAF50; /* Green inner circle */
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    transform: translate(-50%, -50%);
                }

        .form-check-inline {
            margin-right: 1.5rem; /* Space between radio buttons */
        }
    </style>
</head>
<body>
    <div class="auth-container">
        <header class="auth-header">
            <span class="P-prefix">P</span>ersonal Info
        </header>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>