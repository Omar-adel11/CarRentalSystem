@{
    Layout = "_Layout";
    ViewData["Title"] = "About Us";
}


<style>
    /* =====================
       LOGO SCROLLER STYLES
    ===================== */

    .logo-scroller {
        overflow: hidden;
        position: relative;
        width: 100%;
    }

    .logo-scroller-inner {
        display: flex;
        justify-content: center;
        align-items: center;
        animation: scroll-logos 35s linear infinite;
        width: max-content;
    }

        .logo-scroller-inner img {
            height: 50px;
            filter: grayscale(1) brightness(1.2) contrast(1.1);
            margin: 0 2rem;
            opacity: 0.9;
            transition: transform 0.3s ease, opacity 0.3s ease;
        }

            .logo-scroller-inner img:hover {
                filter: brightness(1.8);
                transform: scale(1.1);
                opacity: 1;
            }

    @@keyframes scroll-logos {
        0% {
            transform: translateX(0);
        }

        100% {
            transform: translateX(-50%);
        }
    }
</style>

<!-- Hero Section with Background Image -->
<section class="about-hero" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('/PhotosForTheView/BackgroundCar.jpg');">
