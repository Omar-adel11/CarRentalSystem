@model SignUpDTO
@{
    // This line ensures no layout is used
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        /* All custom styles for the dark theme are embedded here */
        body {
            background-color: #121212;
            color: #e0e0e0;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding: 20px;
        }

        .auth-container {
            background-color: #1f1f1f;
            border-radius: 10px;
            padding: 30px 40px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.4);
            width: 100%;
            max-width: 700px;
        }

        .auth-header {
            font-size: 2.5em;
            font-weight: bold;
            margin-bottom: 30px;
            color: #e0e0e0;
        }

            .auth-header .p-prefix {
                color: #4CAF50;
            }

        .form-group label, .form-check-label, label {
            color: #b0b0b0;
            margin-bottom: 5px;
            display: block;
            font-size: 0.9em;
        }

        .form-control {
            background-color: #2b2b2b;
            border: 1px solid #444;
            color: #e0e0e0;
            padding: 10px;
            border-radius: 5px;
        }

            .form-control:focus {
                background-color: #2b2b2b;
                border-color: #4CAF50;
                box-shadow: 0 0 0 0.2rem rgba(76, 175, 80, 0.25);
                color: #e0e0e0;
            }

        .btn-primary {
            background-color: #4CAF50;
            border-color: #4CAF50;
            padding: 10px 20px;
            border-radius: 5px;
            font-weight: bold;
            margin-top: 20px;
        }

        /* Custom radio/checkbox styles */
        .form-check-input {
            background-color: #333;
            border: 1px solid #555;
        }

            .form-check-input:checked {
                background-color: #4CAF50;
                border-color: #4CAF50;
            }
    </style>
</head>
<body>
    <div class="auth-container">
        <header class="auth-header">
            <span class="p-prefix">C</span>reate Your Account
        </header>

        <form asp-controller="Account" asp-action="SignUp" method="post">

            <div class="form-group mb-3">
                <label>Register as:</label>
                <div class="d-flex">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="Role" id="Buyer" value="Buyer">
                        <label class="form-check-label" for="Buyer">Buyer</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="Role" id="Seller" value="Seller">
                        <label class="form-check-label" for="Seller">Seller</label>
                    </div>
                </div>

                <input type="hidden" id="IsBuyer" name="IsBuyer" value="false" />
                <input type="hidden" id="IsSeller" name="IsSeller" value="false" />

            </div>

            <div class="row">
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="email" class="form-control" placeholder="username@email.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ConfirmEmail"></label>
                <input asp-for="ConfirmEmail" type="email" class="form-control" placeholder="Confirm your email" />
                <span asp-validation-for="ConfirmEmail" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="+20120000000" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="IsAgree">
                <label class="form-check-label" asp-for="IsAgree">
                    I agree to the terms and conditions.
                </label>
                <span asp-validation-for="IsAgree" class="text-danger d-block"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary w-100">Save</button>
            </div>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
</body>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const radios = document.querySelectorAll('input[name="Role"]');
        const isBuyerInput = document.getElementById("IsBuyer");
        const isSellerInput = document.getElementById("IsSeller");

        radios.forEach(radio => {
            radio.addEventListener("click", function () {
                // If clicked again while selected → unselect it
                if (this.previousChecked) {
                    this.checked = false;
                    isBuyerInput.value = "false";
                    isSellerInput.value = "false";
                } else {
                    radios.forEach(r => r.previousChecked = false);
                    this.previousChecked = true;

                    if (this.id === "Buyer") {
                        isBuyerInput.value = "true";
                        isSellerInput.value = "false";
                    } else {
                        isSellerInput.value = "true";
                        isBuyerInput.value = "false";
                    }
                }
            });
        });
    });
</script>

</html>