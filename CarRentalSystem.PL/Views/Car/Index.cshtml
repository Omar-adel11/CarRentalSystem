
@model IEnumerable<Car>
	;
@{
    ViewData["Title"] = "Index";
}

<h1>Cars For Rent</h1>  
<br />
<br />

<a asp-controller="Car" asp-action="Add" class="btn btn-primary">Add Car</a>
<br />
<br />

<form>
    <div class="container">
        <div class="row">
            <div class="col-8">
                <input id="SearchInput" name="SearchInput" placeholder="Search by Model" class="form-control" />
            </div>
            <div class="col-4">
                <input type="submit" value="Search" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>

<br />
<br />
<div id="CarsContainer">

@if(Model.Count()>0)
{
<table class="table table-hover table-striped">
    <thead>
        <tr>
            
            <th>Make</th>
            <th>Model</th>
            <th>Year</th>
            <th>Color</th>
            <th>Daily Rate</th>
            <th>Is Available</th>
            
		</tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                
                <td>@item.Make</td>
                <td>@item.Model</td>
                <td>@item.Year</td>
                <td>@item.Color</td>
                <td>@item.RentPricePerDay.ToString("C")</td>
                <td>@(item.IsAvailable ? "Yes" : "No")</td>
				<td><a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Details</a></td>
                <td><a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Edit</a></td>
				<td><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
			</tr>
        }
    </tbody>
    </table>
}
else
{
    <div class="m4 alert alert-info">
        <h4>No Cars yet!</h4>
    </div>
}


</div>