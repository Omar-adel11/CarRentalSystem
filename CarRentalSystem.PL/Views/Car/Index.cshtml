@model IEnumerable<Car>

@{
    ViewData["Title"] = "Cars";
	Layout = "_Layout";
}

<div class="container mt-5">
    <div class="car-section-header">
        <h1>Cars For Rent</h1>
        <div>
            <a asp-controller="Car" asp-action="Add" class="btn btn-primary">
                <i class="fa fa-plus"></i> Add Car
            </a>
        </div>
    </div>



    <div id="CarsContainer"  class="row">
        @if (Model.Any())
        {
            @foreach (var car in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="car-card">
                        <div class="car-card-header">
                            <div>
                                <h5>@car.Make @car.Model</h5>
                                <span class="car-type">@car.Color</span>
                            </div>
                        </div>
                        <img src="~/files/images/@car.ImageName" class="car-card-img" alt="@car.Model">
                        <div class="car-card-footer">
                            <div>
                                <span class="fw-bold">@car.RentPricePerDay.ToString("C0")/day</span>
                            </div>
                            <div class="car-card-actions">
                                <a asp-action="Edit" asp-route-id="@car.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                <a asp-action="Details" asp-route-id="@car.Id" class="btn btn-sm btn-outline-danger">Details</a>
                                <a asp-action="Delete" asp-route-id="@car.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <h4>No cars have been added yet!</h4>
                </div>
            </div>
        }
    </div>
</div>