@model CarDTO
@{
    ViewData["Title"] = "Edit Car";
}

<div class="container mt-5" style="max-width: 800px;">
    <h1>Edit Car</h1>
    <hr style="border-color: #333;" />

    <form asp-action="Edit" enctype="multipart/form-data" class="mt-4">
        <partial name="PartialViews/AddEditPartialView" />
        <input hidden asp-for="ImageName" />
        <div class="my-3 form-group">
            <input type="submit" value="Save Changes" class="btn btn-primary px-4" />
            <a asp-action="Index" asp-controller="Car" class="btn btn-outline-light">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}