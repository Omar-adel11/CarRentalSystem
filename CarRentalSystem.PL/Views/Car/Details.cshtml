@model Car
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<table class="table table-hover table-striped">
    <thead>
        <tr>
			<th>Image</th>
            <th>Id</th>
            <th>Make</th>
            <th>Model</th>
            <th>Year</th>
            <th>Color</th>
            <th>Daily Rate</th>
            <th>Is Available</th>

        </tr>
    </thead>
    <tbody>
        
            <tr>
            <td><img src="~/files/images/@Model.ImageName" width="100" height="100" class="img-fluid rounded-circle" /></td>
            <td>@Model.Id</td>
            <td>@Model.Make</td>
            <td>@Model.Model</td>
            <td>@Model.Year</td>
            <td>@Model.Color</td>
            <td>@Model.RentPricePerDay.ToString("C")</td>
            <td>@(Model.IsAvailable ? "Yes" : "No")</td>
            
            <td><a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Edit</a></td>
            <td><a asp-action="Index"  class="btn btn-light">Back to List</a></td>
            </tr>
        
    </tbody>
</table>
