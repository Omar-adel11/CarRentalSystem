@model CarDTO

@{
    ViewData["Title"] = "Add New Car";
}

<div class="container mt-5" style="max-width: 800px;">
    <h1>Add New Car</h1>
    <hr style="border-color: #333;" />

    <form asp-action="Add" enctype="multipart/form-data" class="mt-4">
        <partial name="PartialViews/AddEditPartialView" />
        <div class="my-3 form-group">
            <input type="submit" value="Add Car" class="btn btn-primary px-4" />
            <a asp-action="Index" asp-controller="Car" class="btn btn-outline-light">Back to List</a>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}