@model CarDTO

@{
    ViewData["Title"] = "Add";
}

<h1>Add Car</h1>

<br />
<br />

<form action="Add">
    <div class="my-3 form-group">
        <label asp-for="Make" class="control-label"></label>
        <input asp-for="Make" class="form-control" />
        <span asp-validation-for="Make" class="text-danger"></span>
    </div>
    <div class="my-3 form-group">
        <label asp-for="Model" class="control-label"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="my-3 form-group">
        <label asp-for="Year" class="control-label"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="my-3 form-group">
        <label asp-for="Color" class="control-label"></label>
        <input asp-for="Color" class="form-control" />
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>
    <div class="my-3 form-group">
        <label asp-for="RentPricePerDay" class="control-label"></label>
        <input asp-for="RentPricePerDay" class="form-control" />
        <span asp-validation-for="RentPricePerDay" class="text-danger"></span>
    </div>
    <div class="my-3 form-group form-check">
        <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
        <label asp-for="IsAvailable" class="form-check-label"></label>
        <span asp-validation-for="IsAvailable" class="text-danger"></span>
    </div>
    <br />
    <div class="my-3 form-group">
        <input type="submit" value="Add" class="btn btn-primary" />
        <a asp-action="Index" asp-controller="Car" class="btn btn-light">Back to cars list</a>
    </div>
</form>

